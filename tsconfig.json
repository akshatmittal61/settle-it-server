{
	"compilerOptions": {
		"incremental": true,
		"target": "es6",
		"module": "commonjs",
		"resolveJsonModule": true,
		"allowJs": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true,
		"outDir": "build",
		"sourceMap": true
	},
	"exclude": ["node_modules", "build"]
}
